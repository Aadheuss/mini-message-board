<!DOCTYPE html>
<html lang="en">
  <%-include('./head', {title: title}) %>
  <body>
    <%-include("./nav") %>
    <h1>Mini Message Board</h1>
    <ul>
      <h2>Messages</h2>
      <%if (locals.messages) { %>
       <% messages.map((msg, index) => { %>
      <li>
        <p> <%= msg.user %> </p>
        <p> <%= msg.text %> </p>
        <p> <%= msg.date %></p>
        <button>
          <a href=<%=`/message/${index}`%>>open</a>
        </buttom>
      </li>
      <%})%> 
      <%} else {%>
      <li>No message yet</li>
      <%}%>
    </ul>
  </body>
</html>
