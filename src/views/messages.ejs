<!DOCTYPE html>
<html lang="en">
  <%-include('./head', {title: title}) %>
  <body>
    <%-include("./nav") %>
    <h1>Mini Message Board</h1>
    <ul>
      <h2>Messages</h2>
      <%if (locals.messages) { %>
       <% messages.map((msg) => { %>
      <li>
        <p> <%= msg.id %> </p>
        <p> <%= msg.username %> </p>
        <p> <%= msg.message %> </p>
        <p> <%= msg.added %></p>
        <button>
          <a href=<%=`/message/${msg.id}`%>>open</a>
        </buttom>
      </li>
      <%})%> 
      <%} else {%>
      <li>No message yet</li>
      <%}%>
    </ul>
  </body>
</html>
